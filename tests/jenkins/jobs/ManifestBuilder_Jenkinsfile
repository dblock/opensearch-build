def lib = library("jenkins")

pipeline {
    agent none
    stages {
        stage('Build and Assemble OpenSearch') {
            steps {
                def builder = lib.jenkins.ManifestBuilder.new(this)
                builder.build("manifests/1.2.0/opensearch-1.2.0.yml")
                builder.assemble("build/manifest.yml", base_url: "${BASE_URL}")
            }
        }
    }
}